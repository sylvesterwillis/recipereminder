<h1>Listing user_recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_recipes.each do |user_recipe| %>
      <tr>
        <td><%= user_recipe.name %></td>
        <td><%= user_recipe.description %></td>
        <td><%= link_to 'Show', user_recipe %></td>
        <td><%= link_to 'Edit', edit_user_recipe_path(user_recipe) %></td>
        <td><%= link_to 'Destroy', user_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

